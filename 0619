import customtkinter as ctk
from tkinter import filedialog, messagebox

ctk.set_appearance_mode("System")
ctk.set_default_color_theme("blue")

class App(ctk.CTk):
    def __init__(self):
        super().__init__()

        self.title("CustomTkinter ç»¼åˆç¤ºä¾‹")
        self.geometry("800x600")
        self.resizable(False, False)

        # ä¸»å¸ƒå±€ - Tab é¡µ
        self.tabview = ctk.CTkTabview(self)
        self.tabview.pack(padx=20, pady=20, fill="both", expand=True)

        self.main_tab = self.tabview.add("ä¸»é¡µ")
        self.form_tab = self.tabview.add("è¡¨å•")
        self.control_tab = self.tabview.add("æ§åˆ¶")

        self.create_main_tab()
        self.create_form_tab()
        self.create_control_tab()
        self.create_log_panel()

        # äº‹ä»¶ç»‘å®š
        self.bind("<KeyPress>", self.on_key_press)
        self.bind("<Escape>", lambda e: self.on_exit_prompt())
        self.protocol("WM_DELETE_WINDOW", self.on_window_close)
        self.file_label.bind("<Button-1>", self.on_left_click)
        self.file_label.bind("<Double-Button-1>", self.on_double_click)
        self.file_label.bind("<Enter>", self.on_mouse_enter)
        self.file_label.bind("<Leave>", self.on_mouse_leave)

    # =============== ä¸»é¡µé¢ï¼ˆæ–‡ä»¶å¯¹è¯æ¡†ï¼‰ ================
    def create_main_tab(self):
        ctk.CTkLabel(self.main_tab, text="æ–‡ä»¶é€‰æ‹©åŠŸèƒ½æ¼”ç¤º", font=ctk.CTkFont(size=16)).pack(pady=10)

        ctk.CTkButton(self.main_tab, text="é€‰æ‹©æ–‡ä»¶", command=self.select_file).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="é€‰æ‹©å¤šä¸ªæ–‡ä»¶", command=self.select_multiple_files).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="ä¿å­˜æ–‡ä»¶", command=self.save_file).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="é€‰æ‹©æ–‡ä»¶å¤¹", command=self.select_folder).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="å¼¹å‡ºä¿¡æ¯æ¡†", command=self.popup_info).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="å¼¹å‡ºè­¦å‘Šæ¡†", command=self.popup_warning).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="å¼¹å‡ºé”™è¯¯æ¡†", command=self.popup_error).pack(pady=5)
        ctk.CTkButton(self.main_tab, text="ç¡®è®¤é€€å‡º", command=self.on_exit_prompt).pack(pady=5)

        self.file_label = ctk.CTkLabel(self.main_tab, text="å°šæœªé€‰æ‹©æ–‡ä»¶")
        self.file_label.pack(pady=10)

    def select_file(self):
        path = filedialog.askopenfilename()
        if path:
            self.file_label.configure(text=f"é€‰æ‹©äº†: {path}")
            self.log(f"æ–‡ä»¶é€‰æ‹©: {path}")

    def select_multiple_files(self):
        paths = filedialog.askopenfilenames()
        if paths:
            self.file_label.configure(text=f"å…±é€‰ {len(paths)} ä¸ªæ–‡ä»¶")
            self.log(f"å¤šæ–‡ä»¶é€‰æ‹©: {paths}")

    def save_file(self):
        path = filedialog.asksaveasfilename(defaultextension=".txt")
        if path:
            with open(path, "w") as f:
                f.write("CustomTkinter æ–‡ä»¶ä¿å­˜æµ‹è¯•å†…å®¹")
            self.file_label.configure(text=f"ä¿å­˜åˆ°: {path}")
            self.log(f"ä¿å­˜æ–‡ä»¶: {path}")

    def select_folder(self):
        folder = filedialog.askdirectory()
        if folder:
            self.file_label.configure(text=f"é€‰æ‹©æ–‡ä»¶å¤¹: {folder}")
            self.log(f"é€‰æ‹©æ–‡ä»¶å¤¹: {folder}")

    def popup_info(self):
        messagebox.showinfo("ä¿¡æ¯æç¤º", "æ“ä½œæˆåŠŸï¼")
        self.log("å¼¹å‡ºä¿¡æ¯æ¡†")

    def popup_warning(self):
        messagebox.showwarning("è­¦å‘Š", "å¯èƒ½å­˜åœ¨é£é™©ï¼")
        self.log("å¼¹å‡ºè­¦å‘Šæ¡†")

    def popup_error(self):
        messagebox.showerror("é”™è¯¯", "ç¨‹åºå‘ç”Ÿé”™è¯¯ï¼")
        self.log("å¼¹å‡ºé”™è¯¯æ¡†")

    def on_exit_prompt(self):
        if messagebox.askokcancel("é€€å‡ºç¡®è®¤", "æ˜¯å¦é€€å‡ºç¨‹åºï¼Ÿ"):
            self.destroy()

    def on_window_close(self):
        self.on_exit_prompt()

    # =============== è¡¨å•é¡µé¢ï¼ˆæ§ä»¶æ¼”ç¤ºï¼‰ ================
    def create_form_tab(self):
        frame = ctk.CTkFrame(self.form_tab)
        frame.pack(padx=20, pady=20, fill="both", expand=True)

        self.name_entry = ctk.CTkEntry(frame, placeholder_text="è¯·è¾“å…¥å§“å")
        self.name_entry.pack(pady=10)

        self.gender_option = ctk.CTkOptionMenu(frame, values=["ç”·", "å¥³", "å…¶ä»–"])
        self.gender_option.pack(pady=10)

        self.radio_var = ctk.StringVar(value="é€‰é¡¹1")
        ctk.CTkRadioButton(frame, text="é€‰é¡¹1", variable=self.radio_var, value="é€‰é¡¹1").pack()
        ctk.CTkRadioButton(frame, text="é€‰é¡¹2", variable=self.radio_var, value="é€‰é¡¹2").pack()

        self.checkbox_var = ctk.BooleanVar()
        ctk.CTkCheckBox(frame, text="æˆ‘å·²é˜…è¯»å¹¶åŒæ„", variable=self.checkbox_var).pack(pady=5)

        submit_btn = ctk.CTkButton(frame, text="æäº¤", command=self.submit_form)
        submit_btn.pack(pady=10)

    def submit_form(self):
        name = self.name_entry.get()
        gender = self.gender_option.get()
        choice = self.radio_var.get()
        agreed = self.checkbox_var.get()

        info = f"å§“åï¼š{name}\næ€§åˆ«ï¼š{gender}\né€‰æ‹©ï¼š{choice}\nåŒæ„ï¼š{'æ˜¯' if agreed else 'å¦'}"
        messagebox.showinfo("è¡¨å•æäº¤", info)
        self.log("æäº¤è¡¨å•ï¼š" + info)

    # =============== æ§åˆ¶é¡µé¢ï¼ˆæ»‘å—ã€è¿›åº¦ã€å¼€å…³ï¼‰ ================
    def create_control_tab(self):
        frame = ctk.CTkFrame(self.control_tab)
        frame.pack(padx=20, pady=20, fill="x")

        self.progress = ctk.CTkProgressBar(frame)
        self.progress.set(0)
        self.progress.pack(pady=10, fill="x")

        ctk.CTkButton(frame, text="å¢åŠ è¿›åº¦", command=self.increase_progress).pack(pady=5)

        self.slider = ctk.CTkSlider(frame, from_=0, to=100, command=self.slider_changed)
        self.slider.pack(pady=10)
        self.slider_label = ctk.CTkLabel(frame, text="æ»‘å—å€¼ï¼š0")
        self.slider_label.pack()

        self.switch_var = ctk.StringVar(value="off")
        self.switch = ctk.CTkSwitch(frame, text="åŠŸèƒ½å¼€å…³", variable=self.switch_var, onvalue="on", offvalue="off", command=self.switch_toggled)
        self.switch.pack(pady=10)

    def increase_progress(self):
        value = min(self.progress.get() + 0.1, 1.0)
        self.progress.set(value)
        self.log(f"è¿›åº¦æ¡è®¾ç½®ä¸º {int(value * 100)}%")

    def slider_changed(self, value):
        self.slider_label.configure(text=f"æ»‘å—å€¼ï¼š{int(value)}")
        self.log(f"æ»‘å—å€¼å˜åŒ–: {int(value)}")

    def switch_toggled(self):
        status = self.switch_var.get()
        messagebox.showinfo("å¼€å…³çŠ¶æ€", f"å½“å‰ä¸ºï¼š{status}")
        self.log(f"å¼€å…³åˆ‡æ¢ä¸ºï¼š{status}")

    # =============== äº‹ä»¶å¤„ç† ================
    def on_key_press(self, event):
        self.log(f"[é”®ç›˜] æŒ‰ä¸‹: {event.keysym}")

    def on_left_click(self, event):
        self.log(f"[é¼ æ ‡] å•å‡»: x={event.x}, y={event.y}")

    def on_double_click(self, event):
        self.log("[é¼ æ ‡] åŒå‡»")

    def on_mouse_enter(self, event):
        self.file_label.configure(text="é¼ æ ‡è¿›å…¥æ–‡ä»¶æ ‡ç­¾åŒºåŸŸ")
        self.log("[é¼ æ ‡] è¿›å…¥æ ‡ç­¾åŒºåŸŸ")

    def on_mouse_leave(self, event):
        self.file_label.configure(text="é¼ æ ‡ç¦»å¼€æ ‡ç­¾åŒºåŸŸ")
        self.log("[é¼ æ ‡] ç¦»å¼€æ ‡ç­¾åŒºåŸŸ")

    # =============== åº•éƒ¨æ—¥å¿—é¢æ¿ ================
    def create_log_panel(self):
        self.log_panel = ctk.CTkTextbox(self, height=100)
        self.log_panel.pack(padx=20, pady=(0, 10), fill="x")
        self.log_panel.insert("end", "== æ“ä½œæ—¥å¿—è¾“å‡º ==\n")
        self.log_panel.configure(state="disabled")

    def log(self, message: str):
        self.log_panel.configure(state="normal")
        self.log_panel.insert("end", message + "\n")
        self.log_panel.see("end")
        self.log_panel.configure(state="disabled")

if __name__ == "__main__":
    app = App()
    app.mainloop()


