import os
import openpyxl

def traverse_directory(folder_path, parent='', level=0):
    for root, dirs, files in os.walk(folder_path):
        for file in files:
            if file.endswith('.xlsx'):
                file_path = os.path.join(root, file)
                excel_data = read_excel(file_path)
                if parent != '':
                    print('\t' * level + parent + ' ' + excel_data[0])
                else:
                    print(excel_data[0])
                for child in excel_data[1:]:
                    traverse_directory(folder_path, parent=excel_data[0] + ' ' + child, level=level+1)

def read_excel(file_path):
    result = []
    wb = openpyxl.load_workbook(file_path)
    ws = wb.active
    for row in ws.iter_rows(values_only=True):
        for cell in row:
            result.append(cell)
    wb.close()
    return result

# 测试函数
folder_path = 'path/to/your/folder'
traverse_directory(folder_path)